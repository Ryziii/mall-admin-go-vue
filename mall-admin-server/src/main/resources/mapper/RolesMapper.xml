<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ting.demo.mapper.RolesMapper">


    <select id="getRolesByUid" parameterType="long" resultType="com.ting.demo.bean.Role">
        SELECT * FROM mall.role WHERE role_id=#{roleId} AND admin_id=#{adminId}
    </select>
    <insert id="addRoles">
        INSERT INTO mall.role_admin VALUES
        <foreach collection="roles" item="role" separator=",">
            (null,#{role},#{adminId})
        </foreach>
    </insert>
</mapper>